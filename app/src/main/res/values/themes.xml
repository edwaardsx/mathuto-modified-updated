<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Mathuto" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Mathuto.Quiz" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/geologica_regular</item>
    </style>

    <style name="MyExpandedAppBar" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="fontFamily">@font/geologica_regular</item>
        <item name="android:fontFamily">@font/geologica_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyCollapsedAppBar" parent="@style/TextAppearance.AppCompat.Title">
        <item name="fontFamily">@font/geologica_regular</item>
        <item name="android:fontFamily">@font/geologica_regular</item>
    </style>

    <style name="MyProgressMonitoring" parent="@style/TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/geologica_regular</item>
        <item name="android:fontFamily">@font/geologica_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BottomSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>