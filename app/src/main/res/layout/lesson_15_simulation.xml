<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F6F9"
    tools:context=".fragments.lesson15.SimulationFragment">

    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Dividing Decimals Up to 4 Decimal Places by 0.1, 0.01, 0.001\n\nWelcome to the Mathematics 6 Self-Learning on Dividing Decimals Up to 4 Decimal Places by 0.1, 0.01, and 0.001!"
                android:fontFamily="@font/geologica_regular"
                android:textColor="@color/black"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/simulation"
                android:text="Simulate"
                android:fontFamily="@font/geologica_regular"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/btn_primary_button"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnCalculator"
                android:text="Calculator"
                android:elevation="4dp"
                android:fontFamily="@font/geologica_regular"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:background="@drawable/btn_secondary_button"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnWatchVideo"
                android:text="Watch Video"
                android:elevation="4dp"
                android:fontFamily="@font/geologica_regular"
                android:textColor="#3F51B5"
                android:textAllCaps="false"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>