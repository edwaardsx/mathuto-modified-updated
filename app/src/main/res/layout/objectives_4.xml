<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animationView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    app:lottie_rawRes="@raw/objectives"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>
                <ImageButton
                    android:id="@+id/btn_objectives_close"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:background="@null"
                    android:contentDescription="button_close"
                    android:src="@drawable/ic_close" />
                <TextView
                    android:id="@+id/objectives"
                    android:text="Objectives"
                    android:textColor="#3f2570"
                    android:textSize="21sp"
                    android:layout_marginTop="180dp"
                    android:gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/geologica_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <TextView
                android:text="This module was designed and written with you in mind. It is here to help you master Solving Word Problems Involving Multiplication of Fractions. "
                android:textSize="16sp"
                android:fontFamily="@font/geologica_regular"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="After going through this module, you are expected to:"
                android:textSize="16sp"
                android:fontFamily="@font/geologica_regular"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="✦"
                    android:textSize="16sp"
                    android:textColor="#3f2570"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="You are expected to solve routine"
                    android:paddingStart="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/geologica_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="✦"
                    android:textSize="16sp"
                    android:textColor="#3f2570"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Non-routine problems involving multiplication"
                    android:textSize="16sp"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/geologica_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="✦"
                    android:textSize="16sp"
                    android:textColor="#3f2570"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Addition or subtraction of fractions and mixed fractions using appropriate problem solving strategies and tools"
                    android:textSize="16sp"
                    android:paddingStart="10dp"
                    android:fontFamily="@font/geologica_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_lets_get_started"
                android:text="Lets Get Started!"
                android:textAllCaps="false"
                android:fontFamily="@font/geologica_regular"
                android:textColor="@color/white"
                android:background="@drawable/btn_objectives_button"
                android:drawablePadding="10dp"
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="10dp"
                android:paddingHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>