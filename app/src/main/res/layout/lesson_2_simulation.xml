<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F6F9"
    tools:context=".fragments.lesson2.SimulationFragment">

    <androidx.core.widget.NestedScrollView
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Problem Solving Involving Addition and Subtraction of Fractions\n\nFractional Conundrums: Navigating Addition and Subtraction\n\nThis title suggests that the problems involving addition and subtraction of fractions are like conundrums or puzzles that need to be solved. It highlights the complexity and challenges associated with working with fractions. "
                android:fontFamily="@font/geologica_regular"
                android:textColor="@color/black"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/simulation"
                android:text="Simulate"
                android:fontFamily="@font/geologica_regular"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/btn_primary_button"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnCalculator"
                android:text="Calculator"
                android:elevation="4dp"
                android:fontFamily="@font/geologica_regular"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:background="@drawable/btn_secondary_button"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnWatchVideo"
                android:text="Watch Video"
                android:elevation="4dp"
                android:fontFamily="@font/geologica_regular"
                android:textColor="#3F51B5"
                android:textAllCaps="false"
                android:background="@null"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>