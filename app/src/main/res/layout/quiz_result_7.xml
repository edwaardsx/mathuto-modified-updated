<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#303030"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.result.Result7Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="10dp"
        android:background="#303030">
        <Button
            android:id="@+id/btn_back"
            android:background="@null"
            android:drawableStart="@drawable/btn_back_secondary"
            android:layout_width="48dp"
            android:layout_height="?attr/actionBarSize"
            android:contentDescription="back_button"/>
        <TextView
            android:text="Quiz Result"
            android:fontFamily="@font/geologica_regular"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_below="@id/toolbar"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                android:background="@null">
                <LinearLayout
                    android:background="#424242"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--<TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="RESULT:"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:fontFamily="@font/geologica_bold"
                        android:textAlignment="viewStart"/>-->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/total_number_of_questions"
                                android:hint="0"
                                android:textColor="@color/white"
                                android:fontFamily="@font/geologica_bold"
                                android:textSize="30sp"
                                android:gravity="center"
                                android:textColorHint="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <!--<ImageView
                                    android:background="#304FFE"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="2.5dp"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"/>-->
                                <TextView
                                    android:text="Total Question"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/geologica_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_score"
                                android:hint="0"
                                android:textColor="@color/white"
                                android:fontFamily="@font/geologica_bold"
                                android:textSize="30sp"
                                android:gravity="center"
                                android:textColorHint="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <!--<ImageView
                                    android:background="#304FFE"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="2.5dp"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"/>-->
                                <TextView
                                    android:text="Quiz Score"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/geologica_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pie_chart"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_score_correct"
                                android:hint="0"
                                android:textColor="@color/white"
                                android:fontFamily="@font/geologica_bold"
                                android:textSize="30sp"
                                android:gravity="center"
                                android:textColorHint="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:background="#43A047"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="2.5dp"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"/>
                                <TextView
                                    android:text="Correct"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/geologica_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_score_wrong"
                                android:hint="0"
                                android:textColor="@color/white"
                                android:fontFamily="@font/geologica_bold"
                                android:textSize="30sp"
                                android:gravity="center"
                                android:textColorHint="@color/white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:background="#E53935"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginTop="2.5dp"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"/>
                                <TextView
                                    android:text="Wrong"
                                    android:gravity="center"
                                    android:paddingTop="3dp"
                                    android:textColor="@android:color/darker_gray"
                                    android:fontFamily="@font/geologica_regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_summary"
                    android:fontFamily="@font/geologica_bold"
                    android:background="@drawable/btn_secondary_button"
                    android:text="Summary Result"
                    android:textColor="@color/black"
                    android:layout_marginEnd="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_main_menu"
                    android:fontFamily="@font/geologica_bold"
                    android:background="@drawable/btn_primary_button"
                    android:text="Finish"
                    android:textColor="@color/white"
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>