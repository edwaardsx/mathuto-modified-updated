<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="16dp"
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/btn_unlock_close"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:contentDescription="button_close"
                    android:src="@drawable/ic_close_secondary" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="-60dp"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="180dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    android:padding="15dp"
                    android:src="@drawable/ic_congrats" />
            </RelativeLayout>
            <TextView
                android:text="Congratulations!"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/geologica_bold"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="You've unlocked lesson 14: Dividing Decimals and Mixed Decimals"
                android:gravity="center"
                android:fontFamily="@font/geologica_regular"
                android:padding="16dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_ok"
                android:text="OK"
                android:layout_marginVertical="20dp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_primary_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>